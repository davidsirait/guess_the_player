# Application Settings
APP_NAME="Guess the Player API"
APP_VERSION="1.0.0"

# Database
DATABASE_PATH="transfermarkt.db"

# CORS Settings
# For development (React dev server on port 5173):
# CORS_ORIGINS=http://localhost:5173
# For production:
# CORS_ORIGINS=https://yourdomain.com
# For multiple origins (comma-separated):
# CORS_ORIGINS=http://localhost:5173,https://yourdomain.com
# Allow all (NOT recommended for production):
CORS_ORIGINS=*

# Fuzzy Matching Thresholds
FUZZY_MATCH_THRESHOLD=85
PLAYER_LOOKUP_THRESHOLD=70

# Session Settings
SESSION_TTL=21600  # Session timeout in seconds (6 hours)
SESSION_CLEANUP_INTERVAL=300  # Cleanup interval in seconds (5 minutes)

# Redis Connection (optional - currently using in-memory storage)
REDIS_URL=redis://localhost:6379
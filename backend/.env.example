# Application Settings
APP_NAME="Guess the Player API"
APP_VERSION="1.0.0"

# Database
DATABASE_PATH="transfermarkt.db"

# CORS Settings (comma-separated list)
# For production, use specific origins like: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=["*"]

# Fuzzy Matching Thresholds
FUZZY_MATCH_THRESHOLD=85
PLAYER_LOOKUP_THRESHOLD=70

# Session Settings
SESSION_TTL=3600  # Session timeout in seconds (1 hour)
SESSION_CLEANUP_INTERVAL=300  # Cleanup interval in seconds (5 minutes)

# Redis Connection 
REDIS_URL=redis://localhost:6379